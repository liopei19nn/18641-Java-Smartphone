<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScorllView"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:background="#fff"
    android:fillViewport="false">

    <RelativeLayout
        android:id="@+id/w_registration_RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/registration_linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TableRow
                android:id="@+id/registration_TableRow0"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/registration_TextView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:text="@string/registration_registration"
                    android:textColor="#000"
                    android:textIsSelectable="false"
                    android:textSize="30dp"
                    android:textStyle="bold|italic" />
            </TableRow>


            <TableRow
                android:id="@+id/registration_TableRow1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/registration_UserNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.06"
                    android:hint="@string/login_UserName"
                    android:inputType="textEmailAddress"
                    android:maxLength="200"
                    android:textSize="25sp"
                    android:textColor="#ff000000" />
            </TableRow>

            <TableRow
                android:id="@+id/registration_TableRow2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/registration_passWordText"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.06"
                    android:digits="0123456789"
                    android:hint="@string/registration_passwordhint"
                    android:maxLength="4"
                    android:password="true"
                    android:textSize="25sp"
                    android:textColor="#ff000000"
                    android:inputType="number|textPassword" />


            </TableRow>

            <TableRow
                android:id="@+id/registration_TableRow3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/registration_reEnterText"
                    android:layout_width="wrap_content"

                    android:layout_height="50dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.06"
                    android:digits="0123456789"
                    android:inputType="number|textPassword"
                    android:maxLength="4"
                    android:password="true"
                    android:textSize="25sp"
                    android:textColor="#ff000000"
                    android:hint="re-enter the password" />


            </TableRow>

            <TableRow
                android:id="@+id/registration_TableRow4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="80dp">

                <Button
                    android:id="@+id/registration_cancelButton"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="60dip"
                    android:layout_weight="1"
                    android:background="@drawable/button_blue"
                    android:maxLines="2"
                    android:text="@string/registration_cancel"
                    android:textColor="#fff"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/registration_submitButton"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="60dip"
                    android:layout_marginRight="10dip"
                    android:layout_weight="1"
                    android:background="@drawable/button_blue"
                    android:maxLines="2"
                    android:text="@string/registration_submit"
                    android:textColor="#fff"
                    android:textSize="18sp" />
            </TableRow>

        </LinearLayout>


    </RelativeLayout>
</ScrollView>