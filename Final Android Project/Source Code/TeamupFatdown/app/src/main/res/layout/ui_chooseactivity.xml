<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_id"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow
                android:id="@+id/tableRow0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">

                <TextView
                    android:id="@+id/ChooseActivity_textView0_1"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="50dp"
                    android:layout_span="3"
                    android:gravity="center"
                    android:text="@string/activity_title"
                    android:textColor="#000"
                    android:textSize="45sp"
                    android:textStyle="bold|italic" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/ChooseActivity_textView1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/ChooseActivity_Activity"
                    android:textColor="#000"
                    android:textSize="23sp" />

                <Spinner
                    android:id="@+id/ChooseActivity_ActivityName"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/custom_spinner"
                    android:entries="@array/ChooseActivity_Activity"
                    android:gravity="right"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:gravity="center">
                >

                <TextView
                    android:id="@+id/ChooseActivity_textView2_1"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="@string/ChooseActivity_Duration"
                    android:textColor="#000"
                    android:textSize="23sp" />

                <EditText
                    android:id="@+id/ChooseActivity_durationEditText"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:maxLength="3"
                    android:textColor="#ff000000"
                    android:textSize="23sp" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/ChooseActivity_button"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@drawable/button_blue"
                    android:text="@string/activity_submitbutton"
                    android:textColor="#FFF" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>